.devise-form
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin", role: "form" }) do |f|
    = devise_error_messages!
    %h2.form-signin-heading Forgot your password?
    %div
      = f.email_field :email, autofocus: true, placeholder: 'Email address',class: 'form-control'
    %div= f.submit "Send me reset password instructions", class: 'btn btn-lg btn-primary btn-block'
    = render "devise/shared/links"
