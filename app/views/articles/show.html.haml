#article-show.container
  .row
    .col-sm-8.blog-main
      .blog-post
        %h2.blog-post-title=@article.title
        %p.blog-post-meta
          =@article.created_at 
          by
          %a{:href => "#"}= @article.user.email
        %p=@article.text.html_safe
      .discussion
        .title 
          =fa_icon 'comment' 
          Discussion
        = simple_form_for @comment,  :url => comments_path, method: :post do |f|
          = f.input :text, as: :text,label: false, input_html: {class: 'form-control col-sm-12'}
          = f.button :submit, 'Post comment', class: 'post-comment btn btn-info'
        - @article.comments.each do |comment|
          = comment.text

        .comment
          .comment-text Nice post! Thanks!
          %span.date August 18, 2013
          %a.replies 
            =fa_icon 'caret-down'
            %span.text 2 replies
          %a.reply
            =fa_icon 'share' 
            Reply
      / %ul.pager
      /   %li
      /     %a{:href => "#"} Previous
      /   %li
      /     %a{:href => "#"} Next
